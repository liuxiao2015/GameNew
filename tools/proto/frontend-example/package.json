{
  "name": "game-proto",
  "version": "1.0.0",
  "description": "游戏协议定义和生成工具",
  "scripts": {
    "generate": "npm run generate:js && npm run generate:ts",
    "generate:js": "pbjs -t static-module -w es6 -o src/proto/game.js ../../../common/common-api/src/main/proto/game.proto",
    "generate:ts": "pbts -o src/proto/game.d.ts src/proto/game.js",
    "generate:json": "pbjs -t json -o src/proto/game.json ../../../common/common-api/src/main/proto/game.proto",
    "watch": "chokidar '../../../common/common-api/src/main/proto/*.proto' -c 'npm run generate'"
  },
  "devDependencies": {
    "protobufjs": "^7.2.5",
    "chokidar-cli": "^3.0.0"
  },
  "dependencies": {
    "protobufjs": "^7.2.5"
  }
}
